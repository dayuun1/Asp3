@model BookingHotel.Models.Room

<div class="col-md-6">
    <div class="card mb-6">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title fs-3">@Model.Number</h5>
            <p class="card-text text-muted fs-5">@Model.Description</p>
            <h6 class="card-subtitle mb-2 text-primary fs-4">@Model.Class</h6>
            <p class="card-text text-success fs-5">@Model.Price.ToString("c")</p>
            <form asp-controller="Booking" asp-action="AddToBooking" method="post" class="row g-2">
                <input type="hidden" name="roomId" value="@Model.RoomID" />
                <div class="col-md-3">
                    <input type="text" name="guestName" class="form-control" placeholder="Ім’я гостя" required />
                </div>
                <div class="col-md-3">
                    <input type="date" name="dateFrom" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <input type="date" name="dateTo" class="form-control" required />
                </div>
                <div class="col-md-5">
                    <button type="submit" class="btn btn-primary w-300">Забронювати</button>
                </div>
                <a asp-action="Edit" asp-route-id="@Model.RoomID">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@Model.RoomID">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@Model.RoomID">Видалити</a>
            </form>
        </div>
    </div>
</div>
